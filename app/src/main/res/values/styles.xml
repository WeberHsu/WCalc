<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">@dimen/button_text_size</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">@dimen/button_text_min_size</item>
        <item name="autoSizeMaxTextSize">@dimen/button_text_size</item>
        <item name="autoSizeMinTextSize">@dimen/button_text_min_size</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="CalcButton" parent="BaseButton">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_margin">@dimen/btn_margin</item>
    </style>

    <style name="CalcPortraitButton" parent="BaseButton">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
</resources>